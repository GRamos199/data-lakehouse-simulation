# OpenWeather API Configuration
OPENWEATHER_API_KEY=your_api_key_here

# Airflow Configuration
AIRFLOW_HOME=/airflow
AIRFLOW_UID=50000
AIRFLOW_GID=50000
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__DAGS_FOLDER=/app/dags
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=sqlite:////airflow/airflow.db

# Application Configuration
LOG_LEVEL=INFO
TIMEZONE=UTC
ENVIRONMENT=development

# LocalStack Configuration (for local AWS simulation)
LOCALSTACK_ENDPOINT_URL=http://localhost:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# Data paths (local development)
DATA_ROOT_PATH=/app/data
ANALYTICS_OUTPUT_PATH=/app/outputs

# Scheduling
PIPELINE_SCHEDULE_INTERVAL=0 2 * * *  # 2 AM UTC daily
DATA_GENERATION_SCHEDULE_INTERVAL=0 0 * * 0  # Weekly on Sunday
